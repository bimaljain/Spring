<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- alias using <alias> tag -->
	<bean id="textEditor1" class="com.spring.TextEditor">
		<property name="spellChecker" ref="spellChecker-alias1" />
	</bean>
	<bean id="spellChecker1" class="com.spring.SpellChecker" />

	<alias name="spellChecker1" alias="spellChecker-alias1" />

	<!-- alias using <bean> tag -->
	<bean id="textEditor2" class="com.spring.TextEditor">
		<property name="spellChecker" ref="spellChecker-alias2" />
	</bean>
	<bean id="spellChecker2" class="com.spring.SpellChecker" name="spellChecker-alias2" />

	<!-- idref --> <!--TODO: Fix it -->
	<bean id="textEditor3" class="com.spring.TextEditor">
		<property name="spellChecker">
			<idref bean="spellChecker3"/>
		</property>
	</bean>
	<bean id="spellChecker3" class="com.spring.SpellChecker"/>
</beans>