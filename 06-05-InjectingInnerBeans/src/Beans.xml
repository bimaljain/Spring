<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="constructorBased" class="com.spring.TextEditor">
      <constructor-arg>
      	<bean id="spellChecker1" class="com.spring.SpellChecker" />
      </constructor-arg>
   </bean>
   
   <bean id="setterBased" class="com.spring.TextEditor">
      <property name="spellChecker">
      		<bean id="spellChecker2" class="com.spring.SpellChecker" />
      </property>
   </bean>
</beans>