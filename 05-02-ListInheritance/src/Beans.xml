<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="helloIndia" class="com.spring.HelloIndia">
		<property name="messages">
			<list>
				<value>India</value>
			</list>
		</property>
	</bean>

	<bean id="helloAssam1" class="com.spring.HelloIndia" parent="helloIndia">
		<property name="messages">
			<list>
				<value>Assam</value>
			</list>
		</property>
	</bean>
	
	<bean id="helloAssam2" class="com.spring.HelloIndia" parent="helloIndia">
		<property name="messages">
			<list merge="true">
				<value>Assam</value>
			</list>
		</property>
	</bean>
</beans>